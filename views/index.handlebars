<h1>Eat-Da-Burger!!</h1>
<div class = "row">

    <div class = "col-sm-6">
        <ul>
            {{#each burgers}}
              {{#unless this.devoured}}
           <li>
               {{!-- {{burger_name}} --}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                        <span>{{this.id}}. {{this.burger_name}}</span>
                        {{!-- <button type="submit" class="btn btn-sm float-right">Eat Up</button> --}}
                </form>
               <button class = "notdevoured" data-id = "{{this.id}}"> EAT! </button>
           </li>
              {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class = "col-sm-6">
            {{#each burgers}}
              {{#if this.devoured}}
           <li>
               <span>{{this.id}}. {{this.burger_name}}</span>
               {{!-- {{burger_name}} --}}
               <button class = "yesdevoured" data-id = "{{this.id}}"> I'M SATISFIED. NO MORE BURGERS! </button>
           </li>
              {{/if}}
            {{/each}}
    </div>
</div>

<h2>What burger would you like to have?</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit" class="add-burger">Add Burger</button>
</form>






